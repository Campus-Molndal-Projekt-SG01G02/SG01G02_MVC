@{
    ViewData["Title"] = "Welcome";
}

<div class="py-5 mb-4">
    <div class="container center">
        <h1 class="display-4">Welcome to Blueberry Store!</h1>
        <p class="lead">Blueberry Pi är en kraftfull, prisvärd och kompakt mikrodator designad för kreativa projekt, utbildning och IoT-utveckling. Oavsett om du bygger en smart spegel, ett mediacenter eller ett AI-projekt – Blueberry Pi ger dig verktygen för att komma igång..</p>
        <a href="#" class="btn btn-accent">Läs mer</a>
    </div>
</div>

<img src="https://sg01g02storage.blob.core.windows.net/images/StartPageImageFrostWhite.jpg" alt="Blueberry Store Start Page" class="img-fluid w-100 mb-4 img-max-height-50" />

<!-- Frost white section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h3 class="text-blueberry">Mer information</h3>
                    <p>Se specifikationer och tillbehör.</p>
                    <button class="btn btn-primary">Läs mer</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h3 class="text-blueberry">Guider</h3>
                    <p>Lär dig grunderna med våra guider.</p>
                    <button class="btn btn-primary">Läs mer</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h3 class="text-blueberry">Affären</h3>
                    <p>Köp din Blueberry Pi idag.</p>
                    <button class="btn btn-accent">Läs mer</button>
                </div>
            </div>
        </div>
    </div>
</div>

