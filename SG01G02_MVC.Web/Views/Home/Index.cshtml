    ViewData["Title"] = "Welcome";
}

<!-- Exempel på header-sektion med blueberry bakgrund -->
<div class="py-5 mb-4">
    <div class="container center">
        <h1 class="display-4">Välkommen till vår sida</h1>
        <p class="lead">Detta är ett exempel på hur du kan använda den anpassade designen.</p>
        <a href="#" class="btn btn-accent">Läs mer</a>
    </div>
</div>

<img src="https://sg01g02storage.blob.core.windows.net/images/blueberry-room-wide.jpg" alt="Blueberry Room" 
     class="img-fluid w-100 mb-4" />

<!-- Frost white section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h3 class="text-blueberry">Funktion 1</h3>
                    <p>Här är ett exempel på Inter-typsnittet för brödtext.</p>
                    <span class="badge badge-accent">Ny</span>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h3 class="text-blueberry">Funktion 2</h3>
                    <p>Ett annat exempel med formatering.</p>
                    <button class="btn btn-primary">Klicka här</button>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <h3 class="text-blueberry">Funktion 3</h3>
                    <p>Mer text för att visa typsnitt och färger.</p>
                    <button class="btn btn-accent">Starta nu</button>
                </div>
            </div>
        </div>
    </div>
</div>

