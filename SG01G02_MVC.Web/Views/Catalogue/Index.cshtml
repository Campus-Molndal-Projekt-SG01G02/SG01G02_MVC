@model IEnumerable<SG01G02_MVC.Web.Models.ProductViewModel>
@inject SG01G02_MVC.Web.Services.IUserSessionService _session

@{
    ViewData["Title"] = "Product Catalogue";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            There are currently no products to display.
        </div>
    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@($"{product.Price:C}")</td>
                        <td>
                            <a asp-controller="Catalogue" asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-primary">
                                Details
                            </a>
                            @if (_session?.Role == "Admin")
                            {
                                <a asp-controller="Admin" asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning ms-2">
                                    Edit Product
                                </a>
                                <a asp-controller="Admin" asp-action="AddProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning ms-2">
                                    Add Product
                                </a>
                                <a asp-controller="Admin" asp-action="DeleteProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning ms-2">
                                    Delete Product
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>